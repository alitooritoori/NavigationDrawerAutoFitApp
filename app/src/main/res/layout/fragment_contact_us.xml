<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.contactUs.ContactUsFragment">

    <include
        android:id="@+id/fragment_contact_us_promotion_banner_iv"
        layout="@layout/promotions_banner"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:src="@drawable/contact_us_img"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="contact us image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:paddingStart="15sp"
        android:layout_marginTop="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jawad@autofit.com"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingStart="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_margin="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:paddingStart="15sp"
        android:layout_marginTop="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0423 8756028"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingStart="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_margin="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:paddingStart="15sp"
        android:layout_marginTop="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0300 8756028"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingStart="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_margin="15dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/twitter"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/facebook"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/instagram"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/bee"/>

    </LinearLayout>

</LinearLayout>